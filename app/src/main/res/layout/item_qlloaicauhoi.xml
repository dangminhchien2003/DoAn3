<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CardviewQLLoaiCH">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/backgroud_item_linearloaicauhoi"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewQlLoaiCH"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="6dp"
            android:src="@drawable/cauhoidiemliet" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTenQLLoaiCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu hỏi điểm liệt"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#3F51B5"/>

            <TextView
                android:id="@+id/textViewQLmota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="20 câu, sai một trong 20 câu này sẽ trượt phần thi lý thuyết" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageViewxoa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/baseline_delete_24" />
    </LinearLayout>
</androidx.cardview.widget.CardView>