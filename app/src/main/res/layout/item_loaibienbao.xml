<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backgroud_linear_ldb"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/backgroud_linear_ldb"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewloaibienbao"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/bienchidan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTenloaibien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Bien bao cam"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#3F51B5"/>

            <TextView
                android:id="@+id/textViewmota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Biển hiệu lệnh', 'Biển có dạng hình tròn, không có viền, nền màu xanh', 'bienhieulenh" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>