<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cabviewbb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/backgroud_linear_ldb"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewbienbao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:src="@drawable/bienchidan" />
        <TextView
            android:id="@+id/textViewsobien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bien 101"
            android:layout_gravity="center"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTenbien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bien bao cam"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#3F51B5"/>

            <TextView
                android:id="@+id/textViewmota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:text="Biển hiệu lệnh', 'Biển có dạng hình tròn, không có viền, nền màu xanh', 'bienhieulenh" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>