<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#05A50C"
        android:gravity="center"
        android:padding="15dp"
        android:text="Ôn thi giấy phép lái xe"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <ImageView
        android:id="@+id/imageViewtrogiup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_quiz_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager">

        <LinearLayout
            android:id="@+id/LinearHocluat"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:background="@drawable/backgroud_linear"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewHL"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/weight" />

            <TextView
                android:id="@+id/textViewHL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Học luật"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearBB"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:background="@drawable/backgroud_linear"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewBB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/bienbao" />

            <TextView
                android:id="@+id/textViewBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biển báo"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearHLMT"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:background="@drawable/backgroud_linear"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewHLMT"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/moto" />

            <TextView
                android:id="@+id/textViewHLMT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Học lái môtô"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/LinearCH"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backgroud_linear"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewCH"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/book" />

            <TextView
                android:id="@+id/textViewCH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200 Câu hỏi"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearBDA1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backgroud_linear"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView3BD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/worker" />

            <TextView
                android:id="@+id/textViewBD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bộ đề A1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSH"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backgroud_linear"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewSH"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sahinh" />

            <TextView
                android:id="@+id/textViewSH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sa hình"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/image" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="LÁI XE AN TOÀN LÀ HẠNH PHÚC CỦA"
        android:textColor="#E91E63"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="MỌI NHÀ"
        android:textColor="#E91E63"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>